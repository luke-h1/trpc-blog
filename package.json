{
  "name": "trpc-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy:prod": "vc -f --prod -d",
    "tsc": "tsc --noEmit",
    "gen-env": "gen-env-types .env -o src/types/env.d.ts -e .",
    "lint": "eslint \"./src/**/*.{js, jsx,ts,tsx}\" --quiet --fix && eslint \"./**/*.{js, jsx,ts,tsx}\" --quiet --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "prepare": "husky install",
    "check:node": "check-node-version --node 16 --npm 8",
    "prisma:format": "./node_modules/.bin/prisma format",
    "prisma:push": "./node_modules/.bin/prisma db push",
    "prisma:generate": "./node_modules/.bin/prisma generate",
    "prisma:migrate": "./node_modules/.bin/prisma migrate deploy",
    "prisma:studio": "./node_modules/.bin/prisma studio",
    "prisma:migrate dev": "./node_modules/.bin/prisma migrate dev --name <MIGRATION_NAME>",
    "preinstall": "npm run check:node"
  },
  "dependencies": {
    "@prisma/client": "4.2.1",
    "@trpc/client": "9.27.1",
    "@trpc/next": "9.27.1",
    "@trpc/react": "9.27.1",
    "@trpc/server": "9.27.1",
    "check-node-version": "^4.2.1",
    "cookie": "0.5.0",
    "date-fns": "^2.29.2",
    "jotai": "1.8.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "^4.17.21",
    "next": "12.2.5",
    "nodemailer": "6.7.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.34.2",
    "react-query": "3.39.2",
    "reading-time": "^1.5.0",
    "superjson": "1.9.1",
    "zod": "3.18.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.2.4",
    "@types/cookie": "0.5.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "18.7.9",
    "@types/nodemailer": "6.4.5",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "date-fns": "^2.29.2",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gen-env-types": "^1.3.4",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "react-icons": "^4.4.0",
    "reading-time": "^1.5.0",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  }
}
